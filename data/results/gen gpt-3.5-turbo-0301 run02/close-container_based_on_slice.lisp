(<- (desig:action-grounding ?action-designator (close-container ?resolved-action-designator))
    (spec:property ?action-designator (:type :closing))
    (spec:property ?action-designator (:object ?object-designator))
    (desig:current-designator ?object-designator ?current-object-desig)
    (spec:property ?current-object-desig (:type :container))
    (spec:property ?current-object-desig (:name ?object-name))
    (-> (spec:property ?action-designator (:arm ?arm))
        (true)
        (man-int:robot-free-hand ?_ ?arm))
    (lisp-fun man-int:get-object-old-transform ?current-object-desig ?object-transform)
    (lisp-fun man-int:calculate-object-faces ?object-transform (?facing-robot-face ?bottom-face))
    (-> (spec:property ?action-designator (:grasp ?grasp))
        (true)
        (and (lisp-fun man-int:get-action-grasps :container ?arm ?object-transform ?grasps)
             (member ?grasp ?grasps)))
    (lisp-fun man-int:get-action-gripping-effort :container ?effort)
    (lisp-fun man-int:get-action-gripper-opening :container ?gripper-opening)
    (equal ?objects (?current-object-desig))
    (-> (equal ?arm :left)
        (and (lisp-fun man-int:get-action-trajectory :closing ?arm ?grasp T ?objects
                       ?left-closing-pose))
        (equal ?left-closing-pose NIL))
    (-> (equal ?arm :right)
        (and (lisp-fun man-int:get-action-trajectory :closing ?arm ?grasp T ?objects
                       ?right-closing-pose))
        (equal ?right-closing-pose NIL))
    (-> (desig:desig-prop ?action-designator (:collision-mode ?collision-mode))
        (true)
        (equal ?collision-mode nil))
    (desig:designator :action ((:type :closing)
                               (:object ?current-object-desig)
                               (:object-name  ?object-name)
                               (:arm ?arm)
                               (:gripper-opening ?gripper-opening)
                               (:effort ?effort)
                               (:grasp ?grasp)
                               (:left-closing-pose ?left-closing-pose)
                               (:right-closing-pose ?right-closing-pose)
                               (:collision-mode ?collision-mode))
                      ?resolved-action-designator))