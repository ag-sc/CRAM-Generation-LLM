(<- (desig:action-grounding ?action-designator (wipe ?surface-designator ?towel-designator))
    (spec:property ?action-designator (:type :cleaning))
    (spec:property ?action-designator (:surface ?surface-designator))
    (spec:property ?action-designator (:tool ?towel-designator))
    (desig:current-designator ?surface-designator ?current-surface-designator)
    (spec:property ?current-surface-designator (:type ?surface-type))
    (spec:property ?current-surface-designator (:name ?surface-name))
    (desig:current-designator ?towel-designator ?current-towel-designator)
    (spec:property ?current-towel-designator (:type ?towel-type))
    (spec:property ?current-towel-designator (:name ?towel-name))
    (and (cram-robot-interfaces:robot ?robot)
         (cram-robot-interfaces:arm ?robot ?arm)
         (cram-robot-interfaces:gripper ?robot ?gripper)
         (cpoe:object-in-hand ?towel-designator ?gripper)
         (cpoe:object-in-hand ?towel-designator ?arm))
    (lisp-fun obj-int:get-surface-transform ?current-surface-designator ?surface-transform)
    (lisp-fun obj-int:get-object-transform ?current-towel-designator ?towel-transform)
    (lisp-fun obj-int:get-object-pose ?current-towel-designator ?towel-pose)
    (lisp-fun cram-robot-interfaces:arm-ik ?arm ?towel-pose ?towel-transform ?ik-solution)
    (lisp-fun cram-robot-interfaces:arm-move ?arm ?ik-solution)
    (lisp-fun cram-robot-interfaces:gripper-close ?gripper)
    (lisp-fun cram-robot-interfaces:gripper-move ?gripper :position 0.1)
    (lisp-fun cram-robot-interfaces:gripper-move ?gripper :position 0.0)
    (lisp-fun cram-robot-interfaces:gripper-open ?gripper)
    (lisp-fun cram-robot-interfaces:arm-move ?arm ?ik-solution))