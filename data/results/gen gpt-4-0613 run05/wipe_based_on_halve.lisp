(<- (desig:action-grounding ?action-designator (wipe-surface ?resolved-action-designator))
    (spec:property ?action-designator (:type :cleaning))
    (spec:property ?action-designator (:object ?object-designator))
    (desig:current-designator ?object-designator ?current-object-desig)
    (spec:property ?current-object-desig (:type ?object-type))
    (spec:property ?current-object-desig (:name ?object-name))
    (-> (spec:property ?action-designator (:arm ?arm))
        (true)
        (man-int:robot-free-hand ?_ ?arm))
    (-> (spec:property ?action-designator (:grasp ?grasp))
        (true)
        (and (lisp-fun man-int:get-action-grasps ?object-type ?arm ?grasps)
             (member ?grasp ?grasps)))
    (-> (spec:property ?action-designator (:towel ?towel-designator))
        (desig:current-designator ?towel-designator ?current-towel-desig)
        (spec:property ?current-towel-desig (:type ?towel-type))
        (spec:property ?current-towel-desig (:name ?towel-name)))
    (lisp-fun man-int:get-action-gripping-effort ?object-type ?effort)
    (lisp-fun man-int:get-action-gripper-opening ?object-type ?gripper-opening)
    (equal ?objects (?current-object-desig ?current-towel-desig))
    (-> (equal ?arm :left)
        (and (lisp-fun man-int:get-action-trajectory :wiping ?arm ?grasp T ?objects
                       ?left-wiping-pose)
             (lisp-fun man-int:get-traj-poses-by-label ?left-wiping-pose :wiping-up
                       ?left-wipe-up-poses)
             (lisp-fun man-int:get-traj-poses-by-label ?left-wiping-pose :wiping-down
                       ?left-wipe-down-poses))
        (and (equal ?left-wipe-up-poses NIL)
             (equal ?left-wipe-down-poses NIL)))
    (-> (equal ?arm :right)
        (and (lisp-fun man-int:get-action-trajectory :wiping ?arm ?grasp T ?objects
                       ?right-wiping-pose)
             (lisp-fun man-int:get-traj-poses-by-label ?right-wiping-pose :wiping-up
                       ?right-wipe-up-poses)
             (lisp-fun man-int:get-traj-poses-by-label ?right-wiping-pose :wiping-down
                       ?right-wipe-down-poses))
        (and(equal ?right-wipe-up-poses NIL)
            (equal ?right-wipe-down-poses NIL)))
    (-> (desig:desig-prop ?action-designator (:collision-mode ?collision-mode))
        (true)
        (equal ?collision-mode nil))
    (desig:designator :action ((:type :cleaning)
                               (:object ?current-object-desig)
                               (:object-name  ?object-name)
                               (:arm ?arm)
                               (:gripper-opening ?gripper-opening)
                               (:effort ?effort)
                               (:grasp ?grasp)
                               (:towel ?current-towel-desig)
                               (:towel-name ?towel-name)
                               (:left-wipe-up-poses ?left-wipe-up-poses)
                               (:right-wipe-up-poses ?right-wipe-up-poses)
                               (:left-wipe-down-poses ?left-wipe-down-poses)
                               (:right-wipe-down-poses ?right-wipe-down-poses)
                               (:collision-mode ?collision-mode))
                      ?resolved-action-designator))