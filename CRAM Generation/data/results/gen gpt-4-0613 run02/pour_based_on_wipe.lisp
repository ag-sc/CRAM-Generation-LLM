(<- (desig:action-grounding ?action-designator (pour ?resolved-action-designator))
    (spec:property ?action-designator (:type :pouring))
    (spec:property ?action-designator (:grasp ?grasp))
    (spec:property ?action-designator (:arm ?arm))
    (desig:desig-prop ?action-designator (:source ?source-designator))
    (desig:current-designator ?source-designator ?current-source-designator)
    (spec:property ?current-source-designator (:type ?source-type))
    (equal ?source (?current-source-designator))
    (desig:desig-prop ?action-designator (:destination ?destination-designator))
    (desig:current-designator ?destination-designator ?current-destination-designator)
    (spec:property ?current-destination-designator (:type ?destination-type))
    (equal ?destination (?current-destination-designator))
    (-> (equal ?grasp :gripper)
        (and (lisp-fun get-trajectory :pouring ?arm ?grasp ?source ?destination ?lists)
             (lisp-fun man-int:get-traj-poses-by-label ?lists :pouring
                       ?pouring-poses)
             (lisp-fun man-int:get-traj-poses-by-label ?lists :initial
                       ?initial-pose))
        (and (equal ?pouring-poses NIL)
             (equal ?initial-pose NIL)))
    (desig:designator :action ((:type :pouring)
                               (:source ?source)
                               (:destination ?destination)
                               (:arm ?arm)
                               (:grasp ?grasp)
                               (:pouring-poses ?pouring-poses)
                               (:initial-pose ?initial-pose))
                      ?resolved-action-designator))