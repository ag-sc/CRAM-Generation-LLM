(<- (desig:action-grounding ?action-designator (pour ?resolved-action-designator))
    (spec:property ?action-designator (:type :pouring))
    (spec:property ?action-designator (:grasp ?grasp))
    (spec:property ?action-designator (:arm ?arm))
    (desig:desig-prop ?action-designator (:source-container ?source-container-designator))
    (desig:desig-prop ?action-designator (:target-container ?target-container-designator))
    (desig:current-designator ?source-container-designator ?current-source-container-designator)
    (desig:current-designator ?target-container-designator ?current-target-container-designator)
    (spec:property ?current-source-container-designator (:type ?source-container-type))
    (spec:property ?current-target-container-designator (:type ?target-container-type))
    (equal ?source-container (?current-source-container-designator))
    (equal ?target-container (?current-target-container-designator))
    (-> (equal ?grasp :pouring)
        (lisp-fun differentiate-container-types ?grasp ?source-container ?target-container ?current-grasp)
        (equal ?grasp ?current-grasp))
    (desig:desig-prop ?action-designator (:collision-mode ?collision-mode))
    (-> (equal ?arm :left)
        (and (lisp-fun get-trajectory :pouring ?arm ?current-grasp T ?source-container ?target-container ?lists)
             (lisp-fun man-int:get-traj-poses-by-label ?lists :pouring
                       ?left-pour-poses)
             (lisp-fun man-int:get-traj-poses-by-label ?lists :initial
                       ?left-initial-pose))
        (and (equal ?left-pour-poses NIL)
             (equal ?left-initial-pose NIL)))
    (-> (equal ?arm :right)
        (and (lisp-fun get-trajectory :pouring ?arm ?current-grasp T ?source-container ?target-container ?lists)
             (lisp-fun man-int:get-traj-poses-by-label ?lists :pouring
                       ?right-pour-poses)
             (lisp-fun man-int:get-traj-poses-by-label ?lists :initial
                       ?right-initial-pose))
        (and (equal ?right-pour-poses NIL)
             (equal ?right-initial-pose NIL)))
    (desig:designator :action ((:type :pouring)
                               (:collision-mode ?collision-mode)
                               (:left-pour-poses ?left-pour-poses)
                               (:right-pour-poses ?right-pour-poses)
                               (:left-initial-pose ?left-initial-pose)
                               (:right-initial-pose ?right-initial-pose))
                      ?resolved-action-designator))