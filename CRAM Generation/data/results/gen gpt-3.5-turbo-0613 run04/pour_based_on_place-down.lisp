             (lisp-fun cram-tf:ensure-pose-in-frame ?target-pose ?base-frame :use-zero-time t
                       ?target-pose-in-base))
        (and (lisp-fun obj-int:get-object-transform ?current-target-designator ?target-pose-in-base)
