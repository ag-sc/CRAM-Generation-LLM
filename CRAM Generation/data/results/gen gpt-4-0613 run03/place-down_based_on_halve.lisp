(<- (desig:action-grounding ?action-designator (place-down ?resolved-action-designator))
    (spec:property ?action-designator (:type :placing))
    (spec:property ?action-designator (:object ?object-designator))
    (desig:current-designator ?object-designator ?current-object-desig)
    (spec:property ?current-object-desig (:type ?object-type))
    (spec:property ?current-object-desig (:name ?object-name))
    (-> (spec:property ?action-designator (:location ?location-designator))
        (desig:current-designator ?location-designator ?current-location-desig)
        (spec:property ?current-location-desig (:type :location))
        (spec:property ?current-location-desig (:name ?location-name))
        (lisp-fun man-int:get-location-pose ?current-location-desig ?location-pose))
    (-> (spec:property ?action-designator (:arm ?arm))
        (true)
        (man-int:robot-holding-object ?_ ?arm ?current-object-desig))
    (lisp-fun man-int:get-object-old-transform ?current-object-desig ?object-transform)
    (lisp-fun man-int:calculate-object-faces ?object-transform (?facing-robot-face ?bottom-face))
    (-> (spec:property ?action-designator (:grasp ?grasp))
        (true)
        (and (lisp-fun man-int:get-action-grasps ?object-type ?arm ?object-transform ?grasps)
             (member ?grasp ?grasps)))
    (lisp-fun man-int:get-action-gripping-effort ?object-type ?effort)
    (lisp-fun man-int:get-action-gripper-opening ?object-type ?gripper-opening)
    (equal ?objects (?current-object-desig))
    (-> (equal ?arm :left)
        (and (lisp-fun man-int:get-action-trajectory :placing ?arm ?grasp T ?objects
                       ?left-placing-pose ?location-pose)
             (lisp-fun man-int:get-traj-poses-by-label ?left-placing-pose :placing-down
                       ?left-placing-down-poses))
        (equal ?left-placing-down-poses NIL))
    (-> (equal ?arm :right)
        (and (lisp-fun man-int:get-action-trajectory :placing ?arm ?grasp T ?objects
                       ?right-placing-pose ?location-pose)
             (lisp-fun man-int:get-traj-poses-by-label ?right-placing-pose :placing-down
                       ?right-placing-down-poses))
        (equal ?right-placing-down-poses NIL))
    (-> (desig:desig-prop ?action-designator (:collision-mode ?collision-mode))
        (true)
        (equal ?collision-mode nil))
    (desig:designator :action ((:type :placing)
                               (:object ?current-object-desig)
                               (:object-name  ?object-name)
                               (:arm ?arm)
                               (:gripper-opening ?gripper-opening)
                               (:effort ?effort)
                               (:grasp ?grasp)
                               (:left-placing-down-poses ?left-placing-down-poses)
                               (:right-placing-down-poses ?right-placing-down-poses)
                               (:location ?current-location-desig)
                               (:location-name ?location-name)
                               (:collision-mode ?collision-mode))
                      ?resolved-action-designator))