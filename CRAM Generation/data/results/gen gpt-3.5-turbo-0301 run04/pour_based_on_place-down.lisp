(<- (desig:action-grounding ?action-designator (pour ?source-container ?target-container))
    (spec:property ?action-designator (:type :pouring))
    (-> (spec:property ?action-designator (:object ?source-container))
        (cpoe:object-in-hand ?source-container ?arm))
    (-> (spec:property ?action-designator (:target ?target-container))
        (desig:current-designator ?target-container ?current-target-container)
        (spec:property ?current-target-container (:type ?target-type))
        (and (member ?target-type '(:container :bottle :glass))
             (not (cpoe:object-in-hand ?current-target-container ?arm))))
    (lisp-fun obj-int:get-container-contents ?source-container ?contents)
    (lisp-fun obj-int:empty-container ?source-container)
    (lisp-fun obj-int:fill-container ?target-container ?contents))